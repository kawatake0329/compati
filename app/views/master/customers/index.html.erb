<div class='container'>
  <div class='row'>
    <div class='col-lg-4 offset-lg-1 mb-5'>
      <h3 class="alert alert-info text-center">会員一覧</h3>
    </div>
  </div>

  <div class="text-center">
    <div class="col-lg-12">
      <table class='table'>

        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>ニックネーム</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to master_customer_path(customer) do %>
                 <%= customer.name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <td><%= customer.deleted_user ? '有効' : '退会' %></td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  <div>
</div>