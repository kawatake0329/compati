<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>投稿ID</th>
      <th>タイトル</th>
      <th>説明</th>
      <th>タグ</th>
    </tr>
  </thead>

  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td>
          <%= link_to master_post_path(post.id) do %>
            <%= post.title %>
          <% end %>
        </td>
        <td><%= post.description %></td>
        <td>
          <i class="fas fa-tag"></i><%= post.tags.map(&:name).join(', ') %>
        </td>
      </tr>
    <% end %>
    <%= paginate posts %>
  </tbody>
</table>