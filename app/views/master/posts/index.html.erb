<div class='container px-5 px-sm-0'>
  <div class='row shadow p-3 mb-5 rounded'>
    <div class="col-12">
      <div class="col-8">
        <h2>投稿一覧（全<%= @posts.count %>件）</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>タイトル</th>
              <th>説明</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td>
                  <%= link_to master_post_path(post.id) do %>
                    <%= post.id %>
                  <% end %>
                </td>
                <td><%= post.description %></td>
                <td id="favorite_buttons_<%= post.id %>">
                </td>
                <td>
                  <i class="fas fa-tag"><%= post.tags.map(&:name).join(', ') %></i>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="container">

</div>