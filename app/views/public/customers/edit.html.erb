<div class = "container">
  <div clas = "row">
    <div class="col-8 mt-4">
      <h2 class="table-active text-center">プロフィール編集</h2>
    </div>
  </div>
  <div class = "row">
    <div class = " col-lg-8 mb-4">
      <%= form_with model: @customer, url: public_customer_path, method: :patch do |f| %>
      <div class="form-group row">
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
      </div>
      <div class="form-group mb-4 row">
        <label for="inputImage">E-mail</label>
        <%= f.email_field :email, class: 'rounded col-sm-2' %>
      </div>
      <div class="form-group mb-4 row">
        <label for="inputImage">ProfileImage</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div class="form-group mb-4 row">
        <%= f.submit "変更を保存",class: "btn btn-success col-sm-3 font-weight-bold" %>
      </div>
    <% end %>
    </div>
  </div>
  <div class = "row">
    <div class = "col-lg-7 mb-3">
    </div>
  </div>
  </div>
</div>