<div class='container'>
  <div class='row'>
    <div class='col-lg-4 offset-lg-1 mb-5'>
      <h3 class="alert alert-info text-center">会員一覧</h3>
    </div>
  </div>
  <div class="text-center">
    <div class="col-lg-12">
      <table class='table'>

        <thead class="thead-light">
          <tr>
            <th>ニックネーム</th>
            <th>メールアドレス</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td>
                <%= link_to public_customer_path(customer) do %>
                 <%= customer.name %>
                <% end %>
              </td>
              <td><%= image_tag customer.get_profile_image(100,100), class:"my-2 card-img-top" %>></td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  <div>
</div>