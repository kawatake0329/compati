<table>
  <% posts.post_comments.each do |post_comment| %>
  <tr>
    <td><%= link_to customer_path(post_comment.user) do %>
      <%= image_tag post_comment.customer.get_profile_image(50,50) %><br/>
      <%= post_comment.customer.name %>
      <% end %>
    </td>
    <td><%= post_comment.comment %></td>
    <td>
      <% if post_comment.user == current_user %>
        <%= link_to "Destroy", public_post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_post_#{@posts.id}" %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>