<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>説明</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to user_path(post.user) do %>
          <%= image_tag post.user.get_profile_image(50,50) %>
          <% end %>
        </td>
        <td><%= link_to post.title,post, class: "post_#{post.id}" %></td>
        <td><%= post.description %></td>
        <td id="favorite_buttons_<%= post.id %>">
          <%=render 'favorites/favorite', posts: post %>
        </td>
        <td>
          <p>コメント件数：<%= post.post_comments.count %></p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>