<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>説明</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to public_post_path(post.id) %></td>
        <td><%= post.description %></td>
        <td id="favorite_buttons_<%= post.id %>">
        </td>
        <td>
          <i class="fas fa-tag"><%= post.tags.map(&:name).join(', ') %></i>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>