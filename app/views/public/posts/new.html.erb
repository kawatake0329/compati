<div class='container'>
  <div class='row shadow p-3 mb-5 rounded'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>新しい投稿</h1>
  		<%= form_with model:@post, url: public_posts_path, method: :post, local:true do |f| %>

  		  <div class="form-group">
          <%= f.label :title ,'タイトル*必須入力' %>
          <%= f.text_field :title, class: 'form-control book_title' %>
        </div>

        <div class="form-group">
          <%= f.label :name, "ジャンル", class: "col-sm-3" %>
          <%= f.collection_select :genre_id, @specs, :id, :name, {include_blank: "--選択してください--"}, class: 'col-sm-7 form-control' , style: 'width: 50%' %>
        </div>

        <div class="form-group">
          <%= f.label :cpu,'CPU*必須入力'  %>
          <%= f.text_area :cpu, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :memory, 'メモリー*必須入力' %>
          <%= f.text_area :memory, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :storage, 'ストレージ*必須入力' %>
          <%= f.text_area :storage, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :graphic_board, 'グラフィックボード(グラボ)*必須入力' %>
          <%= f.text_area :graphic_board, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :mother_board,'マザーボード'  %>
          <%= f.text_area :mother_board, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :case, 'ケース' %>
          <%= f.text_area :case, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :case_fan, 'ケースファン' %>
          <%= f.text_area :case_fan, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :power, '電源装置' %>
          <%= f.text_area :power, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :compatibility, '互換性' %>
          <%= f.text_area :compatibility, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :description, '説明' %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label"タグ (,で区切ると複数タグ登録できます)" %>
          <%= f.text_field :name,class:"form-control"%>
        </div>

        評価
        <div class="form-group row" id="star">
          <%= f.label :star,'評価 ', class:'col-md-3 col-form-label' %>
          <%= f.hidden_field :star, id: :review_star %>
        </div>

        <script>
              $('#star').empty();
        $('#star').raty({
          size      : 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn :  '<%= asset_path('star-on.png')%>',
          scoreName: 'post[star]',
          half: false,
        });
        </script>

        <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>

  		<% end %>
  	</div>
  </div>
</div>